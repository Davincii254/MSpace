<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mainpg1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="103dp" />


    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="204dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Space Pirate"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/techportbutton"
        android:layout_width="108dp"
        android:layout_height="114dp"
        android:background="@drawable/roundcorner"
        android:text="Techport"
        app:layout_constraintBottom_toTopOf="@+id/asteroidbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView"
        app:layout_constraintVertical_bias="0.925"
        app:srcCompat="@drawable/background"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Techport"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/techportbutton"
        app:layout_constraintEnd_toEndOf="@+id/techportbutton"
        app:layout_constraintStart_toStartOf="@+id/techportbutton"
        app:layout_constraintTop_toTopOf="@+id/techportbutton"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/Imagesbutton"
        android:layout_width="132dp"
        android:layout_height="278dp"
        android:text="Images"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView"
        app:layout_constraintVertical_bias="0.819"
        app:srcCompat="@drawable/background1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Images"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Imagesbutton"
        app:layout_constraintEnd_toEndOf="@+id/Imagesbutton"
        app:layout_constraintStart_toStartOf="@+id/Imagesbutton"
        app:layout_constraintTop_toTopOf="@+id/Imagesbutton"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/asteroidbutton"
        android:layout_width="112dp"
        android:layout_height="141dp"
        android:text="Asteroids"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView"
        app:layout_constraintVertical_bias="0.865"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Asteroids"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/asteroidbutton"
        app:layout_constraintEnd_toEndOf="@+id/asteroidbutton"
        app:layout_constraintStart_toStartOf="@+id/asteroidbutton"
        app:layout_constraintTop_toTopOf="@+id/asteroidbutton"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="265dp"
        android:layout_height="100dp"
        android:clickable="false"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/Imagesbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView"
        app:layout_constraintVertical_bias="0.742"
        app:srcCompat="@drawable/header"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Atsronomy Picture of the day"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintVertical_bias="0.45"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
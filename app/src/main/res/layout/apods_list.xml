<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moringaschool.myspace.ui.ApodsListActivity">


    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="720dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/copyright"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="111dp"
            android:layout_marginEnd="140dp"
            android:text="copyright"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/date"
            android:layout_width="173dp"
            android:layout_height="40dp"
            android:layout_below="@+id/copyright"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="105dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="123dp" />

        <TextView
            android:id="@+id/explanation"
            android:layout_width="179dp"
            android:layout_height="58dp"
            android:layout_below="@+id/date"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="125dp"
            android:text="explanation" />

        <TextView
            android:id="@+id/hdurl"
            android:layout_width="173dp"
            android:layout_height="47dp"
            android:layout_below="@+id/explanation"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="129dp"
            android:text="hdurl" />

        <TextView
            android:id="@+id/media_type"
            android:layout_width="170dp"
            android:layout_height="51dp"
            android:layout_below="@+id/hdurl"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="132dp"
            android:text="media_type" />

        <TextView
            android:id="@+id/service_version"
            android:layout_width="188dp"
            android:layout_height="51dp"
            android:layout_below="@+id/media_type"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="88dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="125dp"
            android:text="service_version" />

        <TextView
            android:id="@+id/title"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:layout_below="@+id/service_version"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="121dp"
            android:text="title" />

        <TextView
            android:id="@+id/url"
            android:layout_width="195dp"
            android:layout_height="36dp"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="87dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="119dp"
            android:text="url" />

        <Button
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/url"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="174dp"
            android:text="Save Apod" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>